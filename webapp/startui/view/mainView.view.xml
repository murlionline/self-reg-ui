<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="startui.controller.mainView">
	<App>
		<pages>
			<Page title="User Registration Form">
				<content>
					<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form0">
						<sap.ui.layout.form:content>
							<core:Title text="Provide your details" id="__title0"/>
							<Label text="Honorific Prefix" id="labelPrefix"/>
							<Input width="30%" id="prefix" value="{user>/honprefix}"/>
							<Label text="First Name" id="labelUserFirstName"/>
							<Input width="30%" id="firstName" value="{user>/firstname}"/>
							<Label text="Last Name" id="labelUserLastName"/>
							<Input width="30%" id="lastName" value="{user>/lastname}"/>
							<Label text="Email Address" id="labelEmail"/>
							<Input width="30%" id="email" value="{user>/email}"/>
							<Label text="Phone" id="labelPhone"/>
							<Input width="30%" id="phone" value="{user>/phone}"/>
						</sap.ui.layout.form:content>
					</sap.ui.layout.form:SimpleForm>
				</content>
				<footer>
					<Bar id="__bar0">
						<contentRight>
							<Button xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" text="Submit"
								width="100px" id="__submit" type="Accept" press="submitRequest"/>
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>